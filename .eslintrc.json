{
  "root": true,
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    },
    {
      "files": ["*.js"],
      "env": {
        "node": true
      },
      "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
      }
    },
    {
      "files": ["test/**"],
      "env": {
        "mocha": true
      }
    }
  ]
}
